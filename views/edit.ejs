<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
</head>
<body>
 
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

    * {
        margin: 0;
        padding: 0;
        outline: none;
        text-decoration: none;
        box-sizing: border-box;
        border: none;
        font-family: 'Roboto', sans-serif;
        ;
    }
    a{
      color: white;
    }
    html {
        height: 100%;
    }

    body {
        background: linear-gradient(to bottom right, rgb(207, 99, 28), rgb(255, 198, 42));
        height: 100vh;
        overflow: hidden;
    }

    .title {
        color: rgb(83, 67, 179);
        text-align: center;
        font-size: 42px;
    }

    .container {
        position: absolute;
        width: 100%;
        padding: 0 20px;
        top: 50%;
        transform: translateY(-50%);
    }

    form {
        text-align: center;
        position: relative;
        width: 100%;
        height: 100%;
        margin: auto;
        top: 150px;
    }

    input {
        width: 40%;
        height: 100%;
        margin-top: 20px;
        background-color: rgb(158, 158, 158);
        max-height: 35px;
        max-width: 500px;
        border-radius: 50px;
        padding-left: 20px;
    }

    button {
        background: linear-gradient(rgb(20, 22, 105), rgb(29, 28, 104));
        width: 50%;
        height: 50%;
        max-height: 35px;
        max-width: 100px;
        margin-top: 20px;
        margin-bottom: 15px;
        color: rgb(219, 219, 219);
        border-radius: 50px;
        cursor: pointer;
    }

    ::placeholder {
        color: white;
    }

    h2{
      text-align: center;
      font-size: 60px;
      color: white;
      padding-top: 50px;
    }
</style>

<h2>Editar Registro</h2>
  <% data.forEach(function(details) { %>
    <form action="/edit/<%= details._id %>" method="POST">
      <input type="text" placeholder="Usuário" value="<%= details.surname %>" name="user" />
      <input type="text" placeholder="Nome" value="<%= details.name %>" name="name">
      <input type="text" placeholder="Sobrenome" value="<%= details.surname %>" name="surname">
      <input type="email" placeholder="Email" value="<%= details.email %>" name="email" />
      <input type="text" placeholder="Celular" value="<%= details.celular %>" name="celular" />
      <input type="text" placeholder="CPF" value="<%= details.cpf %>" name="cpf" />
      <input type="text" placeholder="RG" value="<%= details.rg %>" name="rg" />
      <input type="text" placeholder="Endereço" value="<%= details.endereco %>" name="endereco" />
      <input type="text" placeholder="Cidade" value="<%= details.cidade %>" name="cidade" />
      <input type="text" classname="uf" placeholder="UF" value="<%= details.uf %>" name="uf" />
      <br />
      <button><a href="/show">Todos</a></button>
      <button type="submit">Editar</button>
    </form>
  <% }) %>
 
</body>
</html>